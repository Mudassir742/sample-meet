<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">

    <link rel="stylesheet" href="https://pro.fontawesome.com/releases/v5.10.0/css/all.css"
        integrity="sha384-AYmEC3Yw5cVb3ZcuHtOA93w35dYTsvhLPVnYs9eStHfGJvOvKxVfELGroGkvsg+p" crossorigin="anonymous" />

    <link rel="stylesheet" href="css/home.css" />

    <title>Meet</title>
</head>

<body>
    <div class="body-section">
        <div class="header">
            <h1>TEACHER ID: 1234</h1>
        </div>
        <div class="main-container">
            <div class="vedio-section">
                <iframe width="98%" height="95%" src="https://www.youtube.com/embed/1Ai3gcsiK70"
                    title="YouTube video player" frameborder="0"
                    allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture"
                    allowfullscreen>
                </iframe>
            </div>
            <div class="btn-container">
                <div class="btn-section">
                    <button class="btn btn-1" id="btn1" onclick="handleClickForButtonOne()">
                        <div class="icon" id="icon1">
                            <i class="fas fa-phone-volume"></i>
                        </div>
                    </button>
                    <button class="btn btn-2" id="btn2" onclick="handleClickForButtonTwo()">
                        <div class="icon">
                            <i class="fas fa-bell"></i>
                        </div>
                    </button>
                    <button class="btn btn-3" id="btn3" onclick="handleClickForButtonThree()">
                        <div class="icon">
                            <i class="fas fa-bell"></i>
                        </div>
                    </button>
                    <button class="btn btn-4" id="btn4" onclick="handleClickForButtonFour()">
                        <div class="icon">
                            <i class="fas fa-stop"></i>
                        </div>
                    </button>
                </div>
            </div>

        </div>
        <div class="footer">
            <h2>SCHOOL NAME</h2>
        </div>
    </div>

    <script>
        var isButtonOneCLicked = false
        var isButtonTwoCLicked = false
        var isButtonThreeCLicked = false
        var isButtonFourCLicked = false

        var btnOneParent = document.getElementById("btn1")
        var btnTwoParent = document.getElementById("btn2")
        var btnThreeParent = document.getElementById("btn3")
        var btnFourParent = document.getElementById("btn4")

        function handleClickForButtonOne() {
            if (isButtonOneCLicked == false) {
                btnOneParent.childNodes[1].style.backgroundColor = "#F46226"
                isButtonOneCLicked = true
            }
            else {
                btnOneParent.childNodes[1].style.backgroundColor = "#FFFFFF"
                isButtonOneCLicked = false
            }
        }

        function handleClickForButtonTwo() {
            if (isButtonTwoCLicked == false) {
                btnTwoParent.childNodes[1].style.backgroundColor = "#F46226"
                isButtonTwoCLicked = true
            }
            else {
                btnTwoParent.childNodes[1].style.backgroundColor = "#FFFFFF"
                isButtonTwoCLicked = false
            }
        }

        function handleClickForButtonThree() {
            if (isButtonThreeCLicked == false) {
                btnThreeParent.childNodes[1].style.backgroundColor = "#F46226"
                isButtonThreeCLicked = true
            }
            else {
                btnThreeParent.childNodes[1].style.backgroundColor = "#FFFFFF"
                isButtonThreeCLicked = false
            }
        }

        function handleClickForButtonFour() {
            if (isButtonFourCLicked == false) {
                btnFourParent.childNodes[1].style.backgroundColor = "#F46226"
                isButtonFourCLicked = true
            }
            else {
                btnFourParent.childNodes[1].style.backgroundColor = "#FFFFFF"
                isButtonFourCLicked = false
            }
        }

    </script>

</body>

</html>